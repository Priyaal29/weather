<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Weather </title>
  <link rel="stylesheet" href="/styles/main.css">
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>

<!-- input the name of city -->
  <div class="intro">
  <form action="/submit" method="post">
    <input class="input" name="city" placeholder="enter city name">
    <input type="submit" class=button value="go">
  </form>
  </div>
   
  <!-- weather attributes -->
  <div class="Weather city">
    <% if(locals.city){%>
      <h1> <%= city %> </h1>
      <% } %>
  </div> 

  <div class="Weather temp">

    <% if(locals.temprature){%>
      <p> <%= temprature %>Â°C </p>
      <% } %>
  </div>

  <div class="Weather humidity">
    <% if(locals.humidity){%>
      <p>Humidity : <%= humidity %>% </p>
      <% } %>
  </div>

  <div class="Weather feels">
    <% if(locals.feels_like){%>
      <p> Feel Like : <%= feels_like %> </p>
      <% } %>
  </div>

  <div class="Weather main">
    <% if(locals.main&&locals.icon){%>
      <p>  <%= main %><img src=<%= icon %> > </p>
      
      <% } %>
  </div>

  

  <!-- if input is not a city -->

  <div class="Weather">
  <% if(locals.error){%>
    <h1 style="color: white;">
      <%= error%>
    </h1>
    <% } %>

  </div>
 
  
  

</body>


</html>
